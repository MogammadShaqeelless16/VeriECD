             mc:Ignorable="d"
             x:Class="Kalksi.Views.DetailViews.InfoScreen2">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ImageButton Source=""
                     
                CornerRadius="120"/>

        <Button Text="Notification"
                Grid.Column="1"
                 CornerRadius="120" />

        <Button Text="Favorite" Grid.Row="1"
                 CornerRadius="120" />

        <Button Text="Chat" Grid.Row="1"
                 Grid.Column="1"
                 CornerRadius="120" />

        <Button Text="ECD Centre" Grid.Row="2"
                 Grid.ColumnSpan="2"
                 CornerRadius="120" />
      
    </Grid>


</ContentPage>